{
  "$schema": "zed://schemas/settings",
  "terminal": {
    "env": {
      "PYTHONPATH": "./apps/api:./apps/api/src"
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.pythonPath": "apps/api/.venv/bin/python",
        "python.analysis": {
          "extraPaths": ["apps/api/src"],
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        }
      }
    },
    "typescript-language-server": {
      "settings": {
        "typescript.preferences.importModuleSpecifier": "non-relative"
      }
    }
  },
  "languages": {
    "Python": {
      "format_on_save": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"]
        }
      },
      "language_servers": ["pyright"]
    },
    "TypeScript": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "TSX": {
      "format_on_save": "on",
      "tab_size": 2
    }
  },
  "context_servers": {
    "nixos": {
      "command": "uvx",
      "args": ["mcp-nixos"]
    }
  }
}
